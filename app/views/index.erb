<div class="search">
  <h1><%= l33tify("learn a word") %></h1>
  <form action='/search' method='POST'>
    <input type='text' name='term' placeholder="<%= l33tify("enter a word") %>">
    <input type='submit' value="<%= l33tify("define") %>" id='define-button'>
  </form>
</div>

<% if @term && @definition && @l33t_term && @l33t_definition %>
  <div class="result">
    <dl>
      <article id="noob_def" class="hidden">
        <dt><%= @term %></dt>
        <dd><%= @definition %></dd>
      </article>
      <article id="l33t_def">
        <dt><%= @l33t_term %></dt>
        <dd><%= @l33t_definition %></dd>
      </article>
    </dl>
    <% if logged_in? %>

      <form method='POST' action='/faved_definitions'>
        <input type="hidden" name="fav_def[word]" value="<%= @term %>">
        <input type="hidden" name="fav_def[definition]" value="<%= @definition %>">
        <input type="submit" value="<%= l33tify("save to favorites") %>">
      </form>

    <% end %>
    <a href='' id='translate_to_noob'>(translate to n00b)</a>
    <a href='' id='translate_to_leet' class='hidden'><%= l33tify("u want it leet") + "!!!1!?" %></a>
  </div>
<% end %>
